<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
       
    <include layout="@layout/top_navitation"/>
	<FrameLayout 
	    android:id="@+id/fragment_content"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"/>
	
	<LinearLayout
	    android:id="@+id/linefirst"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"	    
	   >
	
	    <LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
	
	
	<Spinner 
	    android:id="@+id/checkspinner"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:minWidth="120dp"
	    android:layout_marginLeft="20dp"
	    />
	<CheckBox 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/checkorder"
	    android:text="@string/check_order"
	    android:minWidth="120dp"
	    android:layout_marginRight="20dp"/>
	</LinearLayout>
	<ListView 
	    android:id="@+id/partitemlist"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:cacheColorHint="@color/black"/>
	<Button 
	    android:id="@+id/config"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/config"
	    />
	</LinearLayout>
	
	 <LinearLayout
	    android:id="@+id/bottom_line"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="bottom|center"
	    android:background="#aa003399"
	    android:visibility="gone"
	    android:paddingTop="5dip"
	    android:paddingBottom="10dip">
 
 <LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
		<Button
		    android:id="@+id/bottombutton2"
		    android:layout_width="wrap_content"
		    android:layout_height="35dip"
		    android:text="@string/direction" 
		     android:layout_weight="1"
		    android:background="@drawable/blue_button_selector"
		    android:layout_marginRight="5dp"
		    android:layout_marginLeft="5dp"
		    android:visibility="gone"/>

		<Button
		    android:id="@+id/bottombutton3"
		    android:layout_width="wrap_content"
		    android:layout_height="35dip"
		    android:text="@string/measurement"
		     android:layout_weight="1"
		     android:background="@drawable/blue_button_selector"
		    android:layout_marginRight="5dp"
		    android:layout_marginLeft="5dp"/>
		<Button
		    android:id="@+id/bottombutton1"
		    android:layout_width="wrap_content"
		    android:layout_height="35dip"
		    android:text="@string/position" 
		    android:layout_weight="1"
		    android:background="@drawable/blue_button_selector"
		    android:layout_marginRight="5dp"
		    android:layout_marginLeft="5dp"
		    android:visibility="gone"/>
		
	    </LinearLayout>
	    <LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dip">
	    
	    <Button
		    android:id="@+id/bottombutton_pre"
		    android:layout_width="wrap_content"
		    android:layout_height="35dip"
		    android:text="@string/pre_item" 
		    android:layout_weight="1"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:background="@drawable/blue_button_selector"/>
	    
	    <Button
		    android:id="@+id/next"
		    android:layout_width="wrap_content"
		    android:layout_height="35dip"
		    android:text="@string/next_item"
		     android:layout_weight="1"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:background="@drawable/blue_button_selector"/>
		
		</LinearLayout>
	</LinearLayout>

</LinearLayout>
