<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom|center"
    android:orientation="vertical" >
    <LinearLayout
	    android:id="@+id/bottom_line"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="bottom|center"
	    android:background="@drawable/top_item_selected"
	    android:visibility="gone">
 <LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
	    
	    <Button
		    android:id="@+id/bottombutton_pre"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/pre_item" 
		    android:layout_weight="1"
		    android:layout_marginLeft="1dp"/>
	    
		<Button
		    android:id="@+id/bottombutton1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/position" 
		     android:layout_weight="1"
		   />
		</LinearLayout>
 <LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
		<Button
		    android:id="@+id/bottombutton2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/direction" 
		     android:layout_weight="1"
		   />

		<Button
		    android:id="@+id/bottombutton3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/measurement"
		     android:layout_weight="1"
		     />

		<Button
		    android:id="@+id/next"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/next_item"
		     android:layout_weight="1"
		    android:layout_marginRight="1dp"/>
	    </LinearLayout>
	</LinearLayout>

</LinearLayout>
