<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_name"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/check_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text=""
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:visibility="gone" >
    </ListView>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/notification_current"
        android:visibility="gone" />

   
 <!-- X -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.21" 
        android:id="@+id/Xline"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="32dp"
            android:text="@string/x"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/x_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/x"
            android:layout_alignBottom="@+id/x"
            android:layout_toRightOf="@+id/x"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/x_FengValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/x"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="峰  值"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/x_FengFengValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/x_FengValue"
            android:layout_marginTop="24dp"
            android:text="峰峰值"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/x_ValidValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/x_FengFengValue"
            android:layout_marginTop="27dp"
            android:text="有效值"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>
<!-- Y -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.21" 
        android:id="@+id/Yline"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="32dp"
            android:text="@string/y"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/y_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/y"
            android:layout_alignBottom="@+id/y"
            android:layout_toRightOf="@+id/y"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/y_FengValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/y"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="峰  值"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/y_FengFengValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/y_FengValue"
            android:layout_marginTop="24dp"
            android:layout_marginRight="20dp"
            android:text="峰峰值"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/y_ValidValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/y_FengFengValue"
            android:layout_marginTop="27dp"
            android:layout_marginRight="20dp"
            android:text="有效值"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>
    
    <!-- Z -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.21" 
        android:id="@+id/Zline"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="32dp"
            android:text="@string/z"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/z_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/z"
            android:layout_alignBottom="@+id/z"
            android:layout_toRightOf="@+id/z"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/z_FengValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/z"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="峰  值"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/z_FengFengValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/z_FengValue"
            android:layout_marginTop="24dp"
            android:text="峰峰值"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/z_ValidValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/z_FengFengValue"
            android:layout_marginTop="27dp"
            android:text="有效值"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>
    <!-- 右边部分，显示倒计时 -->
		     <LinearLayout
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content" 
		     android:orientation="vertical"
		     android:gravity="center"
		     android:layout_weight="1">
		      <TextView
	             android:id="@+id/time"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="@string/measurement_countdown"
	             android:textAppearance="?android:attr/textAppearanceMedium" />
	         <TextView
	             android:id="@+id/time_value"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text=""
	             android:textAppearance="?android:attr/textAppearanceMedium" />
		     </LinearLayout>
		     <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content" 
     android:orientation="horizontal"
     android:gravity="center">

     <!-- 巡检结果文字描述 -->
     <TextView
         android:id="@+id/colordiscrip"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"       
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <!-- 根据实际测量结果显示对应的颜色级别 -->
	 <RadioButton
	        android:id="@+id/colorRadio"        
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:button="@null"	        
	        android:layout_centerVertical="true" 
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="20dp"        
	        />
 </LinearLayout>
</LinearLayout>