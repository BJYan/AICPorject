<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingLeft="40dip"
    android:paddingRight="20dip">
    <View 
        android:layout_width="3dip"
        android:layout_height="0dip"
        android:background="#ffffff"
        android:id="@+id/search_result_middle_line"
        android:layout_centerHorizontal="true"/>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="55dip"
	    android:background="#55666666"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:id="@+id/search_result_line1_left"
	    android:layout_toLeftOf="@id/search_result_middle_line"
	    android:layout_marginTop="3dip">
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="电机负荷端震动"
	        android:layout_marginLeft="5dip"
	        android:layout_marginRight="5dip"
	        android:textColor="#000000"/>
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="2015-10-06  21:45"
	        android:textSize="@dimen/search_resule_bluetext_size"
            android:textColor="#27beda"/>
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/search_result_line1_right"
	    android:layout_height="55dip"
	    android:layout_width="fill_parent"
	    android:background="#55666666"
	    android:orientation="vertical"
	    android:layout_toRightOf="@id/search_result_middle_line"
	    android:layout_marginTop="3dip"
	    android:gravity="center">
	    <LinearLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center">
	        <TextView 
	        	android:layout_height="wrap_content"
	        	android:layout_width="wrap_content"
	        	android:text="Y"
	        	android:textColor="#000000"/>
	    	<TextView 
	        	android:layout_height="wrap_content"
	        	android:layout_width="wrap_content"
	        	android:text="5.26"
	        	android:layout_marginLeft="10dip"
	        	android:textColor="#000000"/>
	    	<TextView 
	        	android:layout_height="wrap_content"
	        	android:layout_width="wrap_content"
	        	android:text="m/s2"
	        	android:layout_marginLeft="10dip"
	        	android:textColor="#000000"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center">
	        <TextView 
	        	android:layout_height="wrap_content"
	        	android:layout_width="wrap_content"
	        	android:text="X"
	        	android:textColor="#000000"/>
	    	<TextView 
	        	android:layout_height="wrap_content"
	        	android:layout_width="wrap_content"
	        	android:text="5.26"
	        	android:layout_marginLeft="10dip"
	        	android:textColor="#ff0033"/>
	    	<TextView 
	        	android:layout_height="wrap_content"
	        	android:layout_width="wrap_content"
	        	android:text="m/s2"
	        	android:layout_marginLeft="10dip"
	        	android:textColor="#000000"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center">
	        <TextView 
	        	android:layout_height="wrap_content"
	        	android:layout_width="wrap_content"
	        	android:text="Z"
	        	android:textColor="#000000"/>
	    	<TextView 
	        	android:layout_height="wrap_content"
	        	android:layout_width="wrap_content"
	        	android:text="5.26"
	        	android:layout_marginLeft="10dip"
	        	android:textColor="#000000"/>
	    	<TextView 
	        	android:layout_height="wrap_content"
	        	android:layout_width="wrap_content"
	        	android:text="m/s2"
	        	android:layout_marginLeft="10dip"
	        	android:textColor="#000000"/>
	    </LinearLayout>
	</LinearLayout>
</RelativeLayout>
