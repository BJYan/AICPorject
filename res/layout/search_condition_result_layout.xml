<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff"> 
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:id="@+id/relateve1"
        android:background="@color/lightsteelblue"
        android:gravity="center_vertical">
         <TextView
            android:id="@+id/route_type_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"           
            android:text="备煤皮带路线" 
            android:textSize="@dimen/listview_group_text_size"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dip"/>
          <LinearLayout
             android:id="@+id/vline"
             android:layout_width="1dp"
             android:layout_height="30dp"
             android:layout_centerVertical="true"
             android:layout_toLeftOf="@+id/menuimage"
             android:orientation="vertical"
             android:background="#999999" >
         </LinearLayout>
          <ImageView
        	android:id="@+id/search_con_button"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/search_button" 
        	android:layout_toLeftOf="@id/vline"
        	android:padding="5dip"
        	android:layout_centerVertical="true"/>
         <ImageView
        	android:id="@+id/menuimage"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/menu_icon2" 
        	android:layout_alignParentEnd="true"
        	android:padding="5dip"
        	android:layout_centerVertical="true"/>
      </RelativeLayout>
    <LinearLayout 
        android:layout_height="38dip"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView 
            android:layout_height="fill_parent"
            android:layout_width="60dip"
            android:gravity="center"
            android:text="上传时间"
            android:textColor="#99ccff"
            android:textSize="14dp" />
        <Spinner 
            android:layout_height="fill_parent"
            android:layout_width="50dip"
            android:entries="@array/search_class"
            android:gravity="center"
            android:layout_marginLeft="5dip"
            android:background="#55999999"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="3dip"/>
        <TextView 
            android:layout_height="fill_parent"
            android:layout_width="60dip"
            android:gravity="center"
            android:text="上传时间"
            android:textColor="#99ccff"
            android:textSize="14dp"
            android:layout_marginLeft="15dip"/>
        <Spinner 
            android:layout_height="fill_parent"
            android:layout_width="50dip"
            android:entries="@array/search_class"
            android:gravity="center"
            android:layout_marginLeft="5dip"
            android:background="#55999999"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="3dip"/>
    </LinearLayout>
    <View 
        android:layout_height="2dip"
        android:layout_width="wrap_content"
        android:background="#99ccff"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"/>
    <ExpandableListView 
        android:id="@+id/search_con_result_list" 
        android:dividerHeight="3dip"
        android:divider="#ffffff"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
    </ExpandableListView>

</LinearLayout>
