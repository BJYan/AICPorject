<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_name"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/check_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text=""
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:visibility="gone" >
    </ListView>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/notification_current"
        android:visibility="gone" />

<LinearLayout 
    android:layout_height="310dip"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical">
     <!-- X -->
	<RelativeLayout 
	    android:layout_height="100dip"
	    android:layout_width="match_parent"
	    android:id="@+id/Xline"
	    android:background="@drawable/gray_border_bg_shape">
	    <TextView 
	        android:id="@+id/x"
	        android:layout_height="wrap_content"
	        android:layout_width="10dip"
	        android:text="x"
	        android:textSize="20dp"
	        android:layout_marginLeft="10dip"/>
	    <TextView 
	        android:id="@+id/x_value"
	        android:layout_height="wrap_content"
	        android:layout_width="150dip"
	        android:gravity="center"
	        android:text="x_value"
	        android:layout_toRightOf="@id/x"
	        android:textColor="#000000"/>

	    <TextView 
	        android:id="@+id/x_FengValue_name"
	        android:layout_height="wrap_content"
	        android:layout_width="60dip"
	        android:layout_below="@id/x"
	        android:text="峰  值"
	        android:layout_marginLeft="50dip"
	        android:layout_marginTop="3dip"/>
	    <TextView 
	        android:id="@+id/x_FengValue"
	        android:layout_height="wrap_content"
	        android:layout_width="150dip"
	        android:layout_below="@id/x"
	        android:layout_toRightOf="@id/x_FengValue_name"
	        android:text="11111111"
	        android:background="@drawable/deepblue_border_edittext_shape"
	        android:padding="2dip"
	        android:gravity="center"
	        android:layout_marginTop="3dip"/>
	    <TextView 
	        android:id="@+id/x_FengFengValue_name"
	        android:layout_height="wrap_content"
	        android:layout_width="60dip"
	        android:layout_below="@id/x_FengValue_name"
	        android:text="峰峰值"
	        android:layout_marginLeft="50dip"
	        android:layout_marginTop="5dip"/>
	    <TextView 
	        android:id="@+id/x_FengFengValue"
	        android:layout_height="wrap_content"
	        android:layout_width="150dip"
	        android:layout_below="@id/x_FengValue_name"
	        android:layout_toRightOf="@id/x_FengFengValue_name"
	        android:text="11111111"
	        android:background="@drawable/deepblue_border_edittext_shape"
	        android:padding="2dip"
	        android:gravity="center"
	        android:layout_marginTop="5dip"/>
	    <TextView 
	        android:id="@+id/x_ValidValue_name"
	        android:layout_height="wrap_content"
	        android:layout_width="60dip"
	        android:layout_below="@id/x_FengFengValue_name"
	        android:text="有效值"
	        android:layout_marginLeft="50dip"
	        android:layout_marginTop="5dip"/>
	    <TextView 
	        android:id="@+id/x_ValidValue"
