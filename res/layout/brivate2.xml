	        android:layout_toRightOf="@id/x_ValidValue_name"
	        android:text="11111111"
	        android:background="@drawable/deepblue_border_edittext_shape"
	        android:padding="2dip"
	        android:gravity="center"
	        android:layout_marginTop="5dip"/>
	</RelativeLayout>
