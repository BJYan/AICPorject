<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#cccccc"
    android:padding="5dip" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="38dip"
        android:layout_marginLeft="10dip"
        android:gravity="center" >
        <TextView 
            android:id="@+id/search_route_start_time"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="2015-10-15"
            android:gravity="center_vertical"
            android:tag="calendar_button"
            android:drawableLeft="@drawable/calendar_icon"
            android:drawablePadding="5dip"/>
        <TextView 
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:text="至"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dip"
            android:textColor="#000000"/>
        <TextView 
            android:id="@+id/search_route_end_time"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="2015-10-15"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dip"
            android:tag="calendar_button"
            android:drawableLeft="@drawable/calendar_icon"
            android:drawablePadding="5dip"/>
    </LinearLayout>
	<TextView 
	    android:id="@+id/search_button_2"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="8dip"
	    android:paddingBottom="8dip"
	    android:text="搜索"
	    android:gravity="center"
	    android:background="#aa999999"
	    android:layout_marginTop="5dip"
	    android:layout_marginBottom="5dip"
	    android:tag="search_button"/>
</LinearLayout>
