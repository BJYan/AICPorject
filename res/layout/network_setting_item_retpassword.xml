<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"  
    android:gravity="center_horizontal">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dip">
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="90dip"
            android:text="用  户  名"
            android:textSize="16dp"/>
        <EditText 
            android:id="@+id/network_setting_countid"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="130dp"
            android:singleLine="true"            
            android:text=""
            android:hint="请输入用户名"
            android:textSize="16dp"
            android:background="@drawable/gray_border_bg_shape"
            android:padding="3dip"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dip">
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="90dip"
            android:text="旧  密  码"
            android:textSize="16dp"/>
        <EditText 
            android:id="@+id/network_setting_old_password"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="130dp"
            android:singleLine="true"
            android:text=""
            android:textSize="16dp"
            android:password="true"
            android:background="@drawable/gray_border_bg_shape"
            android:padding="3dip"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dip">
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="90dip"
            android:text="新  密  码"
            android:textSize="16dp"/>
        <EditText 
            android:id="@+id/network_setting_new_password"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="130dp"
            android:singleLine="true"
            android:textSize="16dp"
            android:password="true"
            android:background="@drawable/gray_border_bg_shape"
            android:padding="3dip"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dip">
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="90dip"
            android:text="确认新密码"
            android:textSize="16dp"/>
        <EditText 
            android:id="@+id/network_setting_confirm_password"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="130dp"
            android:singleLine="true"
            android:textSize="16dp"
            android:password="true"
            android:background="@drawable/gray_border_bg_shape"
            android:padding="3dip"/>
    </LinearLayout>
    <Button 
        android:id="@+id/network_setting_save"
        android:layout_width="wrap_content"
        android:minWidth="130dp"
        android:layout_height="wrap_content"
        android:text="保存"
        android:layout_marginTop="5dip"/>
</LinearLayout>
