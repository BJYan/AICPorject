<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/white"
    android:paddingTop="10dip"
    android:paddingLeft="5dip"
    android:paddingRight="5dip">
	<LinearLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:background="#55999999"
	    android:orientation="vertical"
	    android:padding="5dip">
	    <TextView 
	        android:id="@+id/network_download_newplan"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="可下载计划（最新）"
	        android:layout_marginLeft="5dip"
	        android:layout_marginTop="5dip"/>
	    <View 
	        android:layout_height="1dip"
	        android:layout_width="fill_parent"
	        android:background="#000000"
	        android:layout_marginTop="5dip"/>
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="化产车间鼓冷路线20150826"
	        android:layout_gravity="center"
	        android:layout_marginTop="5dip"/>
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="化产车间鼓冷特巡路线20150826"
	        android:layout_gravity="center"
	        android:layout_marginTop="5dip"/>
	    <Button 
	        android:layout_height="38dip"
	        android:layout_width="150dip"
	        android:layout_gravity="center"
	        android:text="搜索" 
	        android:gravity="center"
	        android:layout_marginTop="15dip"/>
	</LinearLayout>
	<RelativeLayout 
	   android:layout_height="wrap_content"
	   android:layout_width="fill_parent"
	   android:orientation="horizontal"
	   android:gravity="center_vertical"
	   android:background="#55999999"
	   android:layout_marginTop="5dip"
	   android:padding="5dip">
	    <TextView 
	        android:id="@+id/network_update_type"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="计划更新方式"
	        android:layout_marginLeft="5dip"
	        android:layout_marginTop="5dip"
	        android:layout_marginBottom="5dip"/>
	    <Switch
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:textOn="自动"
	        android:textOff="手动"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="5dip"></Switch>
	    <Button
	        android:layout_below="@id/network_update_type" 
	        android:layout_height="38dip"
	        android:layout_width="150dip"
	        android:text="更新"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dip"/>
	</RelativeLayout>

	<LinearLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:background="#55999999"
	    android:layout_marginTop="5dip"
		android:orientation="vertical"
		android:padding="5dip">
	    <TextView 
	        android:id="@+id/network_downloaded_plan"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="已下载计划"
	        android:layout_marginLeft="5dip"
	        android:layout_marginTop="5dip"/>
	    <View 
	        android:layout_height="1dip"
	        android:layout_width="fill_parent"
	        android:background="#000000"
	        android:layout_marginTop="5dip"/>
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="化产车间鼓冷路线20150826"
	        android:layout_gravity="center"
	        android:layout_marginTop="5dip"/>
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="化产车间鼓冷特巡路线20150826"
	        android:layout_gravity="center"
	        android:layout_marginTop="5dip"/>
	 </LinearLayout>
</LinearLayout>
