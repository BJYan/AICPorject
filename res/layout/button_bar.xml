<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.01"
    android:gravity="center"
    android:background="@drawable/button_shadow_background"
    android:orientation="vertical">
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="1dip"
	    android:background="#55999999"/>
    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/group"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip">

        <RadioButton
            android:id="@+id/btnA"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:button="@drawable/bottom_bt_selector" />

        <RadioButton
            android:id="@+id/btnB"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:button="@drawable/bottom_check_selector" />

        <RadioButton
            android:id="@+id/btnC"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:button="@drawable/bottom_search_selector" />

        <RadioButton
            android:id="@+id/btnD"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:button="@drawable/bottom_notification_selector" />

        <RadioButton
            android:id="@+id/btnE"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:button="@drawable/bottom_downup_selector" />
    </RadioGroup>

</LinearLayout>