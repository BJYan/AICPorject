<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relateve1"
        android:background="@color/lightsteelblue"
        android:gravity="center_vertical">"
         <TextView
            android:id="@+id/route_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"           
            android:text="routeName" 
            android:textSize="@dimen/listview_group_text_size"
           android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            />
          <LinearLayout
             android:id="@+id/vline"
             android:layout_width="1dp"
             android:layout_height="30dp"
             android:layout_centerVertical="true"
             android:layout_toLeftOf="@+id/menuimage"
             android:orientation="vertical"
             android:background="@color/yellow" >
         </LinearLayout>
          <ImageView
        	android:id="@+id/ka"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/arrow" 
        	android:layout_toLeftOf="@id/vline"
        	android:padding="5dip"/>
          
         <ImageView
        	android:id="@+id/menuimage"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/menu_icon2" 
        	android:layout_alignParentEnd="true"
        	android:padding="5dip"/>

        

      </RelativeLayout>
        
   
<!--  third line-->
    <ExpandableListView 
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relateve1"
        android:layout_weight="1"
       android:layout_marginLeft="5dip"
       android:layout_marginRight="5dip"
       android:layout_marginBottom="5dip"
       android:layout_marginTop="5dip"/>


</RelativeLayout>
