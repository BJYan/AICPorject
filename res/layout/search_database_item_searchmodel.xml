<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#55cccc99" 
    android:id="@+id/search_db_layout">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="38dip"
        android:layout_marginLeft="10dip"
        android:gravity="center" >
        <Spinner 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:entries="@array/msg_start_time"
            android:gravity="center_vertical"/>
        <TextView 
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:text="至"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dip"
            android:textColor="#000000"/>
        <Spinner 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:entries="@array/msg_start_time"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dip"/>
    </LinearLayout>
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center" 
        android:id="@+id/options_item_container">
        <TextView 
            android:id="@+id/search_detection_type"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="检测类型"
            android:gravity="center"
            android:textColor="#000000"
            android:tag="options_name"/>
        <TextView 
            android:id="@+id/search_detection_type_shake"
            android:layout_height="25dip"
            android:layout_width="50dip"
            android:background="@drawable/search_database_itemshape"
            android:layout_toRightOf="@id/search_detection_type"
            android:layout_marginLeft="10dip"
            android:text="震动"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/search_detection_type_temp"
            android:layout_height="25dip"
            android:layout_width="50dip"
            android:background="@drawable/search_database_itemshape"
            android:layout_toRightOf="@id/search_detection_type_shake"
            android:layout_marginLeft="15dip"
            android:text="温度"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/search_detection_type_rotate"
            android:layout_height="25dip"
            android:layout_width="50dip"
            android:background="@drawable/search_database_itemshape"
            android:layout_toRightOf="@id/search_detection_type_temp"
            android:layout_marginLeft="15dip"
            android:text="转速"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/search_detection_type_logging"
            android:layout_height="25dip"
            android:layout_width="50dip"
            android:background="@drawable/search_database_itemshape"
            android:layout_below="@id/search_detection_type_shake"
            android:layout_toRightOf="@id/search_detection_type"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:text="录入"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/search_detection_type_observe"
            android:layout_height="25dip"
            android:layout_width="50dip"
            android:background="@drawable/search_database_itemshape"
            android:layout_toRightOf="@id/search_detection_type_logging"
            android:layout_below="@id/search_detection_type_shake"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="5dip"
            android:text="观察"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/search_detection_type_default"
            android:layout_height="25dip"
            android:layout_width="50dip"
            android:background="@drawable/search_database_itemshape"
            android:layout_toRightOf="@id/search_detection_type_observe"
            android:layout_below="@id/search_detection_type_shake"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="5dip"
            android:text="预设"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/search_device_type"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="设备类型"
            android:gravity="center"
            android:layout_below="@id/search_detection_type_logging"
            android:layout_marginTop="10dip"
            android:textColor="#000000"
            android:tag="options_name"/>
        <TextView 
            android:id="@+id/search_device_type_a"
            android:layout_height="25dip"
            android:layout_width="50dip"
            android:background="@drawable/search_database_itemshape"
            android:layout_toRightOf="@id/search_device_type"
            android:layout_below="@id/search_detection_type_logging"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:text="A类"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/search_device_type_b"
            android:layout_height="25dip"
            android:layout_width="50dip"
            android:background="@drawable/search_database_itemshape"
            android:layout_toRightOf="@id/search_device_type_a"
            android:layout_below="@id/search_detection_type_logging"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="15dip"
            android:text="B类"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/search_device_type_c"
            android:layout_height="25dip"
            android:layout_width="50dip"
            android:background="@drawable/search_database_itemshape"
            android:layout_toRightOf="@id/search_device_type_b"
            android:layout_below="@id/search_detection_type_logging"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="15dip"
            android:text="C类"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/search_info_type"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/search_device_type_a"
            android:layout_marginTop="10dip"
            android:text="信息类型"
            android:gravity="center"
            android:textColor="#000000"
            android:tag="options_name"/>
        <TextView 
            android:id="@+id/search_info_type_normal"
            android:layout_height="25dip"
            android:layout_width="wrap_content"
            android:background="@drawable/search_database_itemshape"
            android:layout_toRightOf="@id/search_info_type"
            android:layout_below="@id/search_device_type_a"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:text="日常巡检"
            android:gravity="center"
            android:paddingLeft="2dip"
            android:paddingRight="2dip"/>
        <TextView 
            android:id="@+id/search_info_type_special"
            android:layout_height="25dip"
            android:layout_width="wrap_content"
            android:background="@drawable/search_database_itemshape"
            android:layout_toRightOf="@id/search_info_type_normal"
            android:layout_below="@id/search_device_type_a"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="15dip"
            android:text="特殊巡检"
            android:gravity="center"
            android:paddingLeft="2dip"
            android:paddingRight="2dip"/>
        <TextView 
            android:id="@+id/search_info_type_temporary"
            android:layout_height="25dip"
            android:layout_width="wrap_content"
            android:background="@drawable/search_database_itemshape"
            android:layout_toRightOf="@id/search_info_type_special"
            android:layout_below="@id/search_device_type_a"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="15dip"
            android:text="临时巡检"
            android:gravity="center"
            android:paddingLeft="2dip"
            android:paddingRight="2dip"/>
        <TextView 
            android:id="@+id/search_abnormal_level"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="异常级别"
            android:layout_below="@id/search_info_type_normal"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:textColor="#000000"
            android:tag="options_name"/>
        <TextView 
            android:id="@+id/search_abnormal_level_normal"
            android:layout_height="25dip"
            android:layout_width="50dip"
            android:background="@drawable/search_database_itemshape"
            android:layout_toRightOf="@id/search_abnormal_level"
            android:layout_below="@id/search_info_type_normal"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:text="正常"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/search_abnormal_level_warning"
            android:layout_height="25dip"
            android:layout_width="50dip"
            android:background="@drawable/search_database_itemshape"
            android:layout_toRightOf="@id/search_abnormal_level_normal"
            android:layout_below="@id/search_info_type_normal"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="15dip"
            android:text="警告"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/search_abnormal_level_danger"
            android:layout_height="25dip"
            android:layout_width="50dip"
            android:background="@drawable/search_database_itemshape"
            android:layout_toRightOf="@id/search_abnormal_level_warning"
            android:layout_below="@id/search_info_type_normal"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="15dip"
            android:text="危险"
            android:gravity="center"/>
    </RelativeLayout>
	<TextView 
	    android:id="@+id/search_button_1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="8dip"
	    android:paddingBottom="8dip"
	    android:text="搜索"
	    android:gravity="center"
	    android:background="#aa666666"
	    android:layout_marginTop="5dip"
	    android:layout_marginBottom="5dip"
	    android:tag="search_button"/>
</LinearLayout>
