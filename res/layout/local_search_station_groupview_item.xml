<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#55cccccc" >
   
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
        	android:id="@+id/arrow"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentStart="true"
        	android:padding="5dip"/>
        <View 
            android:layout_height="fill_parent"
            android:layout_width="1dip"
            android:background="#999999"
            android:layout_marginTop="2dip"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="25dip"/>
        <TextView
            android:id="@+id/pathname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"           
            android:text="routeName" 
            android:textSize="@dimen/listview_group_text_size"
            android:textColor="@color/black"
            android:gravity="center_vertical" 
            android:paddingLeft="10dip"/>
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#999999"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
		<TextView
            android:id="@+id/search_local_date"            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"           
            android:text="2015-06-29" 
            android:textSize="@dimen/listview_check_status_deadline_text_size"
            android:textColor="#27beda"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"  />
		<TextView
            android:id="@+id/search_local_time"            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"           
            android:text="10:00" 
            android:textSize="@dimen/listview_check_status_deadline_text_size"
            android:textColor="#27beda"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"  />
		<TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"           
            android:text="已巡检" 
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/listview_check_status_deadline_text_size"
            android:textColor="#27beda"/>
		<TextView
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"           
            android:text="30/30" 
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/listview_check_status_deadline_text_size"
            android:textColor="#27beda"/>
	</LinearLayout>
</LinearLayout>
