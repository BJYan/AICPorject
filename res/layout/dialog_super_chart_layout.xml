<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dip"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
	android:background="@drawable/dialog_common_shape">
	<LinearLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="15dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginBottom="10dip"
        android:gravity="center_horizontal">
	    <TextView 
        	android:id="@+id/dialog_title"
        	android:layout_height="wrap_content"
        	android:layout_width="wrap_content"
        	android:text="dialog"
        	android:gravity="center"
        	android:layout_gravity="center_horizontal"
        	android:textColor="#ffffff"
        	android:textSize="23dp" 
        	android:layout_weight="1"/>
	    <ImageView 
	        android:id="@+id/dialog_close"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:src="@drawable/dialog_close_btn"
	        android:layout_marginLeft="10dip"/>
	</LinearLayout>
	<View 
        android:id="@+id/dialog_line_1"
        android:layout_height="2dip"
        android:layout_width="fill_parent"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:background="#ffffff"/>
	<LinearLayout
	    android:id="@+id/dialog_controller_container" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="5dip"
        android:gravity="center">
	    
	</LinearLayout>
    <View 
        android:id="@+id/dialog_line_2"
        android:layout_height="2dip"
        android:layout_width="fill_parent"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:background="#ffffff"/>
    <LinearLayout
	    android:id="@+id/dialog_content_container" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginTop="15dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginBottom="10dip">

	</LinearLayout>
    <View 
        android:id="@+id/dialog_line_3"
        android:layout_height="2dip"
        android:layout_width="fill_parent"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:background="#ffffff"/>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginBottom="10dip"
        android:layout_gravity="center_horizontal">
        <Button 
            android:id="@+id/dialog_btn1"
            android:layout_height="35dip"
            android:layout_width="100dip"
            android:text="返回"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_selector"/>
        <Button 
            android:id="@+id/dialog_btn2"
            android:layout_height="35dip"
            android:layout_width="100dip"
            android:text="确定"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:layout_marginLeft="35dip"
            android:background="@drawable/dialog_button_selector"/>
    </LinearLayout>

</LinearLayout>
