<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#55cccccc"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="5dip"/>
    <View 
        android:id="@+id/search_con_result_line"
        android:layout_height="28dip"
        android:layout_width="1dip"
        android:background="#999999"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="25dip"
        android:layout_toRightOf="@id/arrow"/>
    <TextView
        android:id="@+id/search_con_result_content"
        android:layout_width="wrap_content"
        android:layout_height="38dip"           
        android:text="routeName" 
        android:textSize="@dimen/listview_group_text_size"
        android:textColor="@color/black"
        android:gravity="center" 
        android:paddingLeft="10dip"
        android:layout_toRightOf="@id/search_con_result_line"/>
    <ImageView 
        android:id="@+id/search_con_result_more"
        android:layout_height="38dip"
        android:layout_width="wrap_content"
        android:src="@drawable/search_con_result_more"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:gravity="center"/>
    <ImageView 
        android:id="@+id/search_con_result_diagram"
        android:layout_height="38dip"
        android:layout_width="wrap_content"
        android:src="@drawable/search_con_result_diagram"
        android:layout_toLeftOf="@id/search_con_result_more"
        android:layout_marginRight="5dip"
        android:gravity="center"/>
    <ImageView 
        android:id="@+id/search_con_result_spectrum"
        android:layout_height="38dip"
        android:layout_width="wrap_content"
        android:src="@drawable/search_con_result_spectrum"
        android:layout_toLeftOf="@+id/search_con_result_diagram"
        android:layout_marginRight="5dip"
        android:gravity="center"/>
</RelativeLayout>