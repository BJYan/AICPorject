<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="38dip"
        android:layout_marginLeft="10dip"
        android:gravity="center">
        <Spinner 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:entries="@array/msg_start_time"
            android:gravity="center_vertical"/>
        <TextView 
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:text="至"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dip"/>
        <Spinner 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:entries="@array/msg_start_time"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dip"/>
    </LinearLayout>
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center">
        <TextView 
            android:id="@+id/search_detection_type"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="检测类型"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/search_detection_type_shake"
            android:layout_height="30dip"
            android:layout_width="60dip"
            android:background="#99cc33"
            android:layout_toRightOf="@id/search_detection_type"
            android:layout_marginLeft="10dip"
            android:text="震动"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/search_detection_type_temp"
            android:layout_height="30dip"
            android:layout_width="60dip"
            android:background="#99cc33"
            android:layout_toRightOf="@id/search_detection_type_shake"
            android:layout_marginLeft="15dip"
            android:text="温度"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/search_detection_type_rotate"
            android:layout_height="30dip"
            android:layout_width="60dip"
            android:background="#99cc33"
            android:layout_toRightOf="@id/search_detection_type_temp"
            android:layout_marginLeft="15dip"
            android:text="转速"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/search_detection_type_logging"
            android:layout_height="30dip"
            android:layout_width="60dip"
            android:background="#99cc33"
            android:layout_below="@id/search_detection_type_shake"
            android:layout_toRightOf="@id/search_detection_type"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:text="录入"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/search_detection_type_observe"
            android:layout_height="30dip"
            android:layout_width="60dip"
            android:background="#99cc33"
            android:layout_toRightOf="@id/search_detection_type_logging"
            android:layout_below="@id/search_detection_type_shake"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="10dip"
            android:text="观察"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/search_detection_type_default"
            android:layout_height="30dip"
            android:layout_width="60dip"
            android:background="#99cc33"
            android:layout_toRightOf="@id/search_detection_type_observe"
            android:layout_below="@id/search_detection_type_shake"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="10dip"
            android:text="预设"
            android:gravity="center"/>
    </RelativeLayout>

</LinearLayout>
