<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@color/white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:paddingTop="10dip"
    android:paddingLeft="5dip"
    android:paddingRight="5dip" >

	<RelativeLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:background="#55999999"
	    android:paddingBottom="5dip">
	    <TextView 
	        android:id="@+id/network_upload_ip"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="上传目标地址"
	        android:layout_marginLeft="5dip"
	        android:layout_marginTop="5dip"/>
	    <EditText 
	        android:id="@+id/network_upload_ip_4"
	        android:layout_height="wrap_content"
	        android:layout_width="35dip"
	        android:gravity="center"
	        android:text=""
	        android:layout_alignParentRight="true"
	        android:background="#ffffff"
	        android:layout_below="@id/network_upload_ip"
	        android:layout_marginRight="5dip"
	        android:layout_marginTop="5dip" 
	        android:digits="0123456789"
	        android:maxLength="3"/>
	    <EditText 
	        android:id="@+id/network_upload_ip_3"
	        android:layout_height="wrap_content"
	        android:layout_width="35dip"
	        android:gravity="center"
	        android:text=""
	        android:background="#ffffff"
	        android:layout_toLeftOf="@id/network_upload_ip_4"
	        android:layout_below="@id/network_upload_ip"
	        android:layout_marginRight="5dip"
	        android:layout_marginTop="5dip" 
	        android:digits="0123456789"
	        android:maxLength="3"/>
	    <EditText 
	        android:id="@+id/network_upload_ip_2"
	        android:layout_height="wrap_content"
	        android:layout_width="35dip"
	        android:gravity="center"
	        android:text=""
	        android:background="#ffffff"
	        android:layout_toLeftOf="@id/network_upload_ip_3"
	        android:layout_below="@id/network_upload_ip"
	        android:layout_marginRight="5dip"
	        android:layout_marginTop="5dip" 
	        android:digits="0123456789"
	        android:maxLength="3"/>
	    <EditText 
	        android:id="@+id/network_upload_ip_1"
	        android:layout_height="wrap_content"
	        android:layout_width="35dip"
	        android:gravity="center"
	        android:text=""
	        android:background="#ffffff"
	        android:layout_toLeftOf="@id/network_upload_ip_2"
	        android:layout_below="@id/network_upload_ip"
	        android:layout_marginRight="5dip"
	        android:layout_marginTop="5dip" 
	        android:digits="0123456789"
	        android:maxLength="3"/>
	    <TextView 
	        android:id="@+id/network_upload_ip_name"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content" 
	        android:text="服务器IP："
	        android:layout_toLeftOf="@id/network_upload_ip_1"
	        android:layout_below="@id/network_upload_ip"
	        android:layout_marginRight="5dip"
	        android:layout_marginTop="5dip" />

	    <Button
	        android:id="@+id/button1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:text="保存" />

	</RelativeLayout>
	<LinearLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:background="#55999999"
	    android:layout_marginTop="5dip"
		android:orientation="vertical">
	    <TextView 
	        android:id="@+id/network_upload_data_type"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="上传数据类型"
	        android:layout_marginLeft="5dip"
	        android:layout_marginTop="5dip"
	        android:layout_marginBottom="5dip"/>
	    <CheckBox
	        android:id="@+id/network_upload_data_type_cb1" 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content" 
	        android:text="日常巡检计划数据"
	        android:layout_marginLeft="70dip"/>
	    <CheckBox
	        android:id="@+id/network_upload_data_type_cb2" 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="特殊巡检计划数据" 
	        android:layout_marginLeft="70dip"/>
	    <CheckBox
	        android:id="@+id/network_upload_data_type_cb3" 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="临时测量数据" 
	        android:layout_marginLeft="70dip"/>
	    <CheckBox
	        android:id="@+id/network_upload_data_type_cb4" 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="任务执行数据" 
	        android:layout_marginLeft="70dip"/>
	    <CheckBox
	        android:id="@+id/network_upload_data_type_cb5" 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="本机信息" 
	        android:layout_marginLeft="70dip"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:background="#55999999"
	    android:layout_marginTop="5dip"
		android:orientation="vertical">
	    <Switch
	        android:id="@+id/network_upload_type_switch"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"
	        android:textOn="自动"
	        android:textOff="手动"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dip"
	        android:text="上传数据方式"
			android:layout_marginLeft="5dip"
	        android:layout_marginTop="5dip"
	        android:layout_marginBottom="5dip"></Switch>
	    <RadioGroup 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:id="@+id/radiogroups">
	    <RadioButton
	        android:id="@+id/network_upload_type_rb1" 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="仅WIFI情况下自动上传"
	        android:layout_marginLeft="55dip" />
	    <RadioButton
	        android:id="@+id/network_upload_type_rb2" 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="仅USB情况下自动上传"
	        android:layout_marginLeft="55dip" />
	    <RadioButton
	        android:id="@+id/network_upload_type_rb3" 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="只要通讯连接就自动上传"
	        android:layout_marginLeft="55dip" />
	    </RadioGroup>
	    <Button 
	     	android:id="@+id/network_upload_button"
	     	android:layout_height="38dip"
	     	android:layout_width="150dip"
	     	android:text="上传"
	     	android:layout_gravity="center"
	     	android:layout_marginBottom="5dip"/>
	 </LinearLayout>	
	</LinearLayout>
</ScrollView>