<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/lisv_item_background"
    android:gravity="center_vertical" >
   
       <ImageView
        	android:id="@+id/arrow"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentStart="true"
        	/>
        <View 
            android:id="@+id/device_item_line_1"
            android:layout_height="30dip"
            android:layout_width="1dip"
            android:background="#999999"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:layout_toRightOf="@id/arrow"/>
        <TextView
            android:id="@+id/pathname"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="36dip"           
            android:text="routeName" 
            android:textSize="@dimen/listview_group_text_size"
            android:textColor="@color/black"
            android:gravity="center_vertical" 
            android:paddingLeft="10dip"
            android:layout_toRightOf="@id/device_item_line_1"/>
        <ImageView
        	android:id="@+id/deviceedit"
        	android:layout_width="30dip"
        	android:src="@drawable/device_edit"
        	android:layout_height="36dip"
        	android:padding="3dip" 
        	android:layout_alignParentRight="true"
        	/>
        <View 
            android:id="@+id/device_item_line_2"
            android:layout_height="1dip"
            android:layout_width="fill_parent"
            android:background="#999999"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_below="@id/device_item_line_1"/>
 
</RelativeLayout>
