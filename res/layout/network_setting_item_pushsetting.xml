<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"  
    android:gravity="center_horizontal">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dip">
        <Switch 
            android:id="@+id/network_setting_newplan"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textOn="on"
            android:textOff="off"/>
         <TextView 
            android:layout_height="wrap_content"
            android:layout_width="150dip"
            android:text="发现新巡检计划"
            android:layout_marginLeft="15dip"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dip">
        <Switch 
            android:id="@+id/network_setting_newmsg"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textOn="on"
            android:textOff="off"/>
         <TextView 
            android:layout_height="wrap_content"
            android:layout_width="150dip"
            android:text="发现新消息"
            android:layout_marginLeft="15dip"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dip">
        <Switch 
            android:id="@+id/network_setting_newtask"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textOn="on"
            android:textOff="off"/>
         <TextView 
            android:layout_height="wrap_content"
            android:layout_width="150dip"
            android:text="发现新任务"
            android:layout_marginLeft="15dip"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip">
        <Switch 
            android:id="@+id/network_setting_lowmemory"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textOn="on"
            android:textOff="off"/>
         <TextView 
            android:layout_height="wrap_content"
            android:layout_width="150dip"
            android:text="本机剩余内存低于20%"
            android:layout_marginLeft="15dip"/>
    </LinearLayout>
</LinearLayout>
