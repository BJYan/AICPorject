<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#003399">
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginLeft="10dip">
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="60dip"
            android:text="采样点数"/>
        <Spinner 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:entries="@array/check_data_type"/>
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="60dip"
            android:text="采样点数"
            android:layout_marginLeft="20dip"/>
        <Spinner 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:entries="@array/check_data_type"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginTop="5dip">
	    <TextView 
	       	android:id="@+id/dialog_thr_chartonly_first_title"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:text="Y"
	        android:layout_marginLeft="15dip"
	        android:layout_marginTop="2dip"
	        android:textColor="#000000"/>
	    <LinearLayout 
	        android:id="@+id/dialog_thr_chartonly_first_chart"
	        android:layout_height="80dip"
	        android:layout_width="match_parent"
	        android:orientation="vertical"></LinearLayout>
	    <TextView 
	       	android:id="@+id/dialog_thr_chartonly_sec_title"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:text="X"
	        android:layout_marginLeft="15dip"
	        android:layout_marginTop="2dip"
	        android:textColor="#000000"/>
	    <LinearLayout 
	        android:id="@+id/dialog_thr_chartonly_sec_chart"
	        android:layout_height="80dip"
	        android:layout_width="match_parent"
	        android:orientation="vertical"></LinearLayout>
	    <TextView 
	       	android:id="@+id/dialog_thr_chartonly_thr_title"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:text="Z"
	        android:layout_marginLeft="15dip"
	        android:layout_marginTop="2dip"
	        android:textColor="#000000"/>
	    <LinearLayout 
	        android:id="@+id/dialog_thr_chartonly_thr_chart"
	        android:layout_height="80dip"
	        android:layout_width="match_parent"
	        android:orientation="vertical"></LinearLayout>
    </LinearLayout>
</LinearLayout>
